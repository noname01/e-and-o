extends layout.jade
block main
    h1 E&O
    #gameArea
        table#grid
            tr(ng-repeat="row in map track by $index")
                td(ng-repeat="cell in row track by $index",
                class="{{(cell === null ? 'empty' : (cell % 2 == 0 ? 'even' : 'odd'))}} {{canSet ? 'canSet' : ''}}",
                ng-click="setNumber($parent.$index, $index)") {{cell}}
        .numbers
            a(href="", ng-repeat="num in numbers.even.list track by $index",
            class="hand even {{(num === selected && $index === selectedIndex) ? 'selected' : ''}} {{numbers.even.available[$index]?'':'used'}}",
            ng-click="changeSelected(num, $index)") {{num}}
        .numbers
            a(href="", ng-repeat="num in numbers.odd.list track by $index",
            class="hand odd {{(num === selected && $index === selectedIndex) ? 'selected' : ''}} {{numbers.odd.available[$index]?'':'used'}}",
            ng-click="changeSelected(num, $index)") {{num}}

    #side
        form(ng-submit="sendMessage()")
            input#inputMessage(ng-model="textInput", type="text")
            input(type="submit", value="send")
        ul#messages
            li(ng-repeat="msg in messages" class="animation") {{msg}}
